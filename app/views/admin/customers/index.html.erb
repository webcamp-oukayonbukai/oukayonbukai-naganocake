<div class="container">
  <div class="row">
    <div class="col-md-8">

    <h4>会員一覧</h4>
    <table class="table table-hover table-inverse" >
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= @customer.id %></td>
          <td><%= link_to @customer.last_name+@customer.first_name, admin_customer_path(@customer) %></td>
          <td><%= @customer.email %></td>
          <td><%= @customer.withdraw_status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>

