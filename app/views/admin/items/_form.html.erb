<div class="container">
  <div class="row">
    <div class="col-md-7">

      <%= form_with model: [:admin, item], local: true do |f| %>
        <table class= "table table-borderless table-sm">
        <tr>
      　 <td><%= f.label :商品画像 %></td>
      　 <td><%= f.attachment_field :image %></td>
      　</tr>
      　<tr>
      　 <td><%= f.label :商品名 %></td>
      　 <td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "商品名", size: 50 %></td>
      　</tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :description, autofocus: true, autocomplete: "description", placeholder: "ここに説明文を記述します", size:"50x7" %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name,:prompt => "選択してください", size: 50 %></td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.number_field :price, autofocus: true, autocomplete: "price", placeholder: "1000", size: 50 %><%= f.label :円 %></td>
        </tr>
        <tr>
          <td><%= f.label :sale_status, :販売ステータス %></td>
          <td>
            <%= f.radio_button  :sale_status, true %>
            <%= f.label :販売中 %>
            <%= f.radio_button  :sale_status, false %>
            <%= f.label :販売停止中 %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <% if item.id.nil? %>
              <%= f.submit "  新規登録  ", class: 'btn btn-outline-success btn-lg' %>
            <%else%>
              <%= f.submit "  変更を保存  ", class: 'btn btn-outline-success btn-lg' %>
            <% end %>
          </td>
        </tr>
        </table>
      <% end %>

   </div>
  </div>
</div>