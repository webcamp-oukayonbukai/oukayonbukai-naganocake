<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p class="title">ジャンル一覧・追加</p>
      <%= render 'form', genre: @genre %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <table class="table table-hover table-inverse" >
        <thead>
          <tr>
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center">
              <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-outline-success btn-sm" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>