<p class="title">ジャンル一覧・追加</p>
<%= render 'form', genre: @genre %>
<table class=‘table table-hover table-inverse’>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre) , class: 'btn btn-outline-success btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
