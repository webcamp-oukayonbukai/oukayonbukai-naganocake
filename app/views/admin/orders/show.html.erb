<div class="container">
  <div class="row">
    <div class="col-md-12">

    <p class="title">注文履歴詳細</p>
    <table class="table table-borderless" >
      <tr>
        <td><strong>購入者</strong></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><strong>注文日</strong></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </td>
      </tr>
      <tr>
        <td><strong>配送先</strong></td>
        <td>〒<%= @order.postcode %> <%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <td><strong>支払方法</strong></td>
        <td><%= @order.pay_type_i18n %></td>
        <td></td>
      </tr>
      <tr>
        <td><strong>注文ステータス</strong></td>
        <td></td>
        <td></td>
      </tr>
    </table>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-borderless" >
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
          <tr>
            <% @order_details.each do |order_detail| %>
              <td><%= order_detail.item.name %></td>
              <td></td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            <% end %>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-borderless">
        <tr>
          <td><strong>商品合計</strong></td>
          <td><%= %>円</td>
        </tr>
        <tr>
          <td><strong>送料</strong></td>
          <td><%= @order.shipping_cost %>円</td>
        </tr>
        <tr>
          <td><strong>請求金額合計</strong></td>
          <td><%= %>円</td>
        </tr>
      </table>
    </div>
  </div>

    </div>
  </div>
</div>