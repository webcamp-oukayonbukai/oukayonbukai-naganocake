<h1>配送先登録/一覧</h1>
<%= render 'form', address: @address %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class= "table table-bordered">
        <thread>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thread>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to '編集する', edit_address_path(address) %>
              <%= link_to '削除する', address, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{address.id}" %>
            </td>
          </tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>