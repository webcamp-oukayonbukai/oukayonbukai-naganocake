<div class="container">
  <div class="row">
    <div class="col-md-9">

      <p class="title">新規会員登録</p>
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

      <table class="table table-hover table-inverse table-borderless table-sm">
        <thead>
          <tr>
            <td style="width:18%">
              <%= f.label :名前 %>
            </td>
            <td style="width:5%">
              <%= f.label :"(姓)" %>
            </td>
            <td style="width:10%">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "令和" %>
            </td>
            <td style="width:5%">
              <%= f.label :"(名)" %>
            </td>
            <td style="width:10%">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "道子" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td>
              <%= f.label :"(セイ)" %>
            </td>
            <td>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder: "レイワ" %>
            </td>
            <td>
              <%= f.label :"(メイ)" %>
            </td>
            <td>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder: "ミチコ" %>
            </td>
            </td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",placeholder: "0000000" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td></td>
            <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address",placeholder: "東京都渋谷区代々木神園町0-0", size: 40 %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",placeholder: "0000000000" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード(6文字以上)" %></td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "　　　新規登録　　　", class: 'btn btn-outline-success btn-sm' %></td>
          </tr>

        </thead>
      </table>

      <% end %>

      <p class="title">既に登録済みの方</p>
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

    </div>
  </div>
</div>
