<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p class="title">注文履歴一覧<p>
      <table class="table table-hover table-inverse" >
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.address %></td>
            <td><%= order.name %></td>
            <td><%= order.total_price %></td>
            <td><%= order.buy_status %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-outline-success btn-sm" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 