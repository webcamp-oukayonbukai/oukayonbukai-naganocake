<h1>注文情報確認</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h3>ショッピングカート</h3>
      <%= form_with model: @order, local: true do |f| %>
        <table class="table table-bordered table-sm">
          <thread>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thread>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag(cart_item.item, :image, :fill, 60, 40) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.tax_price %></td>
              <td><%= cart_item.quantity %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
  <% end %>
    </div>
  </div>
</div>
送料
<%= @order.shipping_cost %>
商品合計
<%= @cart_items.sum(&:subtotal) %>
請求金額
<%= @order.cal_price(current_customer) %>

支払方法
<% if @order.pay_type == "creditcard" %>
<p>クレジットカード</p>
<% else %>
<p>銀行振込</p>
<% end %>

お届け先

"〒"
<%= @order.postcode %>
<%= @order.address %>
<%= @order.name %>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
<%= f.hidden_field :postcode, value: @order.postcode %>
<%= f.hidden_field :address, value: @order.address %>
<%= f.hidden_field :name, value: @order.name %>
<%= f.hidden_field :pay_type, value: @order.pay_type %>
<%= f.hidden_field :total_price, value: @order.total_price %>
<%= f.hidden_field :buy_status, value: @order.buy_status %>
<%= f.submit "注文を確定する", class: 'btn btn-outline-success btn-sm' %>
<% end %>