<div class="container">
  <div class="row">
    <div class="col-md-7">

      <h4>マイページ</h4>
      <p><strong>登録情報</strong>　<%= link_to "編集する", customers_edit_path(@customer), class: "btn btn-outline-success btn-sm" %></p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td style="width:25%">氏名</td>
            <td><%= @customer.last_name+@customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana+@customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <p><strong>配送先　</strong>　<%= link_to "一覧を見る", addresses_path, class: "btn btn-outline-primary btn-sm" %></p>
      <p><strong>注文履歴</strong>　<%= link_to "一覧を見る", orders_path, class: "btn btn-outline-primary btn-sm" %></p>

    </div>
  </div>
</div>