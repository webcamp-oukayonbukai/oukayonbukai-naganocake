<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p class="title">会員情報編集<p>
        　<%= form_with model: @customer, local: true do |f| %>
          <table class= "table table-borderless table-sm">
        　　  <tr>
              <td style="width:15%">氏名</td>
              <td style="width:15%"><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
        　　  </tr>
        　　  <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
        　　  </tr>
        　　  <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
        　　  </tr>
        　　  <tr>
              <td>住所</td>
              <td colspan="2"><%= f.text_field :address, size: 60 %></td>
        　　  </tr>
        　　  <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
        　　  </tr>
        　　  <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email %></td>
        　　  </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class: 'btn btn-outline-success' %></td>
              <td><%= link_to "退会する", customers_unsubscribe_path(@customer), class: 'btn btn-outline-danger btn-sm' %></td>
            </tr>
    </div>
  </div>
</div>