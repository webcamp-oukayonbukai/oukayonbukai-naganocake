<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h3>ショッピングカート</h3>
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "カートを空にします。よろしいでしょうか？", class: "btn btn-danger" %>
        <table class="table table-bordered table-sm">
          <thread>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thread>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag(cart_item.item, :image, :fill, 60, 40) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.tax_price %></td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
                  <%= f.select :quantity, [*(1..10)], { include_blank: '個数選択' } %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
							</td>
              <td><%= cart_item.subtotal %></td>
              <td>
                <%= link_to "削除する", cart_items_path, method: :delete, "data-confirm" => "商品を削除します。よろしいでしょうか？", class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      合計金額
      <%= @cart_items.sum(&:subtotal) %>
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>


